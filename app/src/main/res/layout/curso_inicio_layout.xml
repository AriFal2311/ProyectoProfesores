<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_course"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/curso_inicio_rojo"
    android:layout_margin="10dp"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/icon_course"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/logo_math" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="26dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icon_course"
        android:src="@drawable/icon_mas" />

    <TextView
        android:id="@+id/idCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_course"
        android:layout_centerInParent="true"
        android:layout_marginTop="53dp"
        android:text="@string/inicio_curso_nombre"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>
