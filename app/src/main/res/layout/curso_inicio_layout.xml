<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"    >

    <RelativeLayout
        android:id="@+id/linear_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/curso_inicio_rojo"
        >

        <ImageView
            android:id="@+id/icon_course"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/logo_math" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="26dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_mas" />
        </RelativeLayout>

        <TextView
            android:id="@+id/idCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_course"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:maxWidth="125dp"
            android:textStyle="bold"
            android:text="@string/inicio_curso_nombre"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>



</LinearLayout>
